
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ventas</title>

    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/DataTables/datatables.min.js"></script>

    <script type="text/javascript" src="~/JS/DataTable.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/DataTables/DataTables-1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />

    <link href="~/CSS/Header_Estilo.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Footer_Estilo.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/General_Estilo.css" rel="stylesheet" type="text/css" />

    <link href="~/fontawesome/css/all.css" rel="stylesheet" />

</head>
<body>
    @RenderPage("~/Views/Secciones/Header.cshtml")
    
    <div class="container"> 
        <div class="Ver_Articulos">
            <div class="row seccion1">
                <div class="col-lg-11 form-horizontal" style="border-bottom: 1px solid grey; margin-bottom:10px;">
                    <div class="form-group">
                        <label for="#" class="col-lg-3 col-form-label">Nombre Articulo: </label>
                        <div class="col-lg-7">
                            <input type="text" class="form-control" id="#" placeholder="Ingrese Nombre/Codigo Articulo">
                        </div>
                    </div>
                </div>
                <div class="col-lg-10 form-horizontal">
                    <div class="form-group">
                        <label for="#" class="col-sm-1 col-form-label">Codigo: </label>                        
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="#" placeholder="6837" disabled>
                        </div>
                        <label for="#" class="col-sm-1 col-form-label">Articulo: </label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="#" placeholder="Cemento Cemen 100lbrs" disabled>
                        </div>                     
                    </div>
                </div>
                <div class="col-lg-10 form-horizontal">
                    <div class="form-group">
                        <label for="#" class="col-sm-1 col-form-label">Precio U.: </label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="#" placeholder="280" disabled>
                        </div>
                        <label for="#" class="col-sm-1 col-form-label">Cantidad U.: </label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="#" >
                        </div>
                        <label for="#" class="col-sm-1 col-form-label">Precio V.: </label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="#" placeholder="280" disabled>
                        </div>
                        <label for="#" class="col-sm-1 col-form-label">Cantidad V.: </label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="#">
                        </div>
                    </div>
                </div>
             </div>
            <div class="seccion2">
                <img src="~/Imagenes/Paquete2/png/101-camera.png"/>
            </div>
        </div>
                <div class="Lista_Articulos">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="MyTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nombre Articulo</th>
                                            <th>Precio Unitario</th>
                                            <th>Cantidad</th>
                                            <th>Total</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Tornillos</td>
                                            <td>.5</td>
                                            <td>1</td>
                                            <td>40</td>
                                            <td>
                                                <a href="@Url.Action("#", "#", new {id = 2 })"><i class="fa fa-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Cemento</td>
                                            <td>280</td>
                                            <td>2</td>
                                            <td>560</td>
                                            <td>
                                                <a href="@Url.Action("#", "#", new {id = 2 })"><i class="fa fa-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Pega</td>
                                            <td>10</td>
                                            <td>1</td>
                                            <td>10</td>
                                            <td>
                                                <a href="@Url.Action("#", "#", new {id = 2 })"><i class="fa fa-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Tapa Gotas</td>
                                            <td>30</td>
                                            <td>1</td>
                                            <td>30</td>
                                            <td>
                                                <a href="@Url.Action("#", "#", new {id = 2 })"><i class="fa fa-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
</body>
</html>
