@model List<Ferreteria.Models.Proveedores>





@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Proveedores</title>

    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/DataTables/datatables.min.js"></script>

    <script type="text/javascript" src="~/JS/DataTable.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/DataTables/DataTables-1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />

    <link href="~/CSS/Header_Estilo.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Footer_Estilo.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/General_Estilo.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Proveedor.css" rel="stylesheet" type="text/css" />

    <link href="~/fontawesome/css/all.css" rel="stylesheet" />


</head>
<body>
    @RenderPage("~/Views/Secciones/Header.cshtml")

    <div class="Agregar">
        <a href="@Url.Action("Crear","Proveedores")">
            <label class="btn btn-success">Agregar <i class="fas fa-briefcase-medical"></i></label>
        </a>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table id="MyTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="cabecera">Cod. Proveedor</th>
                                <th class="cabecera">Nombre Proveedor</th>
                                <th class="cabecera">Contacto</th>
                                <th class="cabecera">Correo Proveedor</th>
                                <th class="cabecera">Telefono</th>                                
                                <th class="cabecera">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                for (int i = 0; i < @Model.Count(); i++)
                                {
                                    <tr>
                                        <td>@Model[i].Id_Proveedor</td>
                                        <td>@Model[i].Nombre_Proveedor</td>
                                        <td>@Model[i].Nombre_Contacto</td>
                                        <td>@Model[i].Correo_Proveedor</td>
                                        <td>@Model[i].Telefono_Proveedor</td>                                   
                                        <td>
                                            <a href="@Url.Action("Editar", "Proveedores", new {id = Model[i].Id_Proveedor })"><i class="fa fa-pencil-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            }                                                
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </div>
</body>
</html>
